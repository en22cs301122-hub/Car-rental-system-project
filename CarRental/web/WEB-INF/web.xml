<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarListServlet</servlet-name>
        <servlet-class>controller.CarListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookCarServlet</servlet-name>
        <servlet-class>controller.BookCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyBookingsServlet</servlet-name>
        <servlet-class>controller.MyBookingsServlet</servlet-class>
    </servlet>

    <!-- Mappings with lowercase, clean URLs -->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarListServlet</servlet-name>
        <url-pattern>/car-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookCarServlet</servlet-name>
        <url-pattern>/book-car</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyBookingsServlet</servlet-name>
        <url-pattern>/my-bookings</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
